{
  "manifest_version": 2,

  "name": "ModTools",
  "description": "Make moderating Yahoo Groups easier",
  "version": "0.23",

  "permissions": [
    "*://*.modtools.org/",
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "*://direct.ilovefreegle.org/",
    "*://*.yahoo.com/"
  ],

  "icons": { "16": "ModToolsLogo16.png",
             "48": "ModToolsLogo48.png",
            "128": "ModToolsLogo128.png" },


  "background": {
    "scripts": [
      "jquery-3.2.1.min.js",
      "modtools.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [ "*://modtools.org/*", "*://www.modtools.org/*", "*://dev.modtools.org/*", "*://iznik.modtools.org/*" ],
      "js": [
        "jquery-3.2.1.min.js",
        "modtoolscont.js"
      ]
    }
  ],

  "web_accessible_resources": ["manifest.json"],

  "applications": {
    "gecko": {
      "update_url": "https://modtools.org/plugin/update.json"
    }
  }
}