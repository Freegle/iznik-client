<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="102" id="org.ilovefreegle.modtools" version="0.0.21" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ModTools</name>
    <description>Tool to help moderators of Freegle and similar groups</description>
    <author email="geeks@ilovefreegle.org" href="https://ilovefreegle.org">
		Chris Cant, Freegle Ltd</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
