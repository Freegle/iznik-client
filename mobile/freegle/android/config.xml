<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="512" id="org.ilovefreegle.direct" version="1.3.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Freegle</name>
    <description>Offer and request free items on your local Freegle reuse group</description>
    <author />
    <author email="geeks@ilovefreegle.org" href="https://ilovefreegle.org">
					Chris Cant, Freegle Ltd
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="ios">
        <preference name="StatusBarOverlaysWebView" value="false" />
        <preference name="StatusBarBackgroundColor" value="#ffffff" />
        <preference name="StatusBarStyle" value="default" />
        <preference name="Orientation" value="all" />
    </platform>
    <platform name="android">
        <preference name="SplashMaintainAspectRatio" value="false" />
    </platform>
    <preference name="SplashScreenDelay" value="1000" />
    <preference name="FadeSplashScreen" value="false" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-targetSdkVersion" value="20" />
    </platform>
    <platform name="ios">
        <preference name="deployment-target" value="8.0" />
    </platform>
    <splash density="ldpi" height="426" orientation="portrait" platform="android" src="package-assets/FreegleSplash_320x426.png" width="320" />
    <splash density="mdpi" height="470" orientation="portrait" platform="android" src="package-assets/FreegleSplash_320x470.png" width="320" />
    <splash density="hdpi" height="640" orientation="portrait" platform="android" src="package-assets/FreegleSplash_480x640.png" width="480" />
    <splash density="xhdpi" height="960" orientation="portrait" platform="android" src="package-assets/FreegleSplash_720x960.png" width="720" />
    <splash density="ldpi" height="320" orientation="landscape" platform="android" src="package-assets/FreegleSplash_426x320.png" width="426" />
    <splash density="mdpi" height="320" orientation="landscape" platform="android" src="package-assets/FreegleSplash_470x320.png" width="470" />
    <splash density="hdpi" height="480" orientation="landscape" platform="android" src="package-assets/FreegleSplash_640x480.png" width="640" />
    <splash density="xhdpi" height="720" orientation="landscape" platform="android" src="package-assets/FreegleSplash_960x720.png" width="960" />
    <splash density="xlarge" height="960" orientation="portrait" platform="android" src="package-assets/FreegleSplash_640x960.png" width="640" />
    <splash density="large" height="800" orientation="portrait" platform="android" src="package-assets/FreegleSplash_480x800.png" width="480" />
    <splash density="small" height="320" orientation="portrait" platform="android" src="package-assets/FreegleSplash_240x320.png" width="240" />
    <splash density="normal" height="480" orientation="portrait" platform="android" src="package-assets/FreegleSplash_320x480.png" width="320" />
    <icon density="ldpi" height="36" platform="android" src="package-assets/FreegleLaunch36.png" width="36" />
    <icon density="mdpi" height="48" platform="android" src="package-assets/FreegleLaunch48.png" width="48" />
    <icon density="hdpi" height="72" platform="android" src="package-assets/FreegleLaunch72.png" width="72" />
    <icon density="xhdpi" height="96" platform="android" src="package-assets/FreegleLaunch96.png" width="96" />
    <engine name="android" spec="~6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.1.0" />
    <plugin name="cordova-plugin-device" spec="^1.1.7" />
    <plugin name="cordova-plugin-statusbar" spec="^2.3.0" />
    <plugin name="cordova-plugin-network-information" spec="^1.3.4" />
    <plugin name="cordova-plugin-inappbrowser" spec="^1.7.2" />
    <plugin name="cordova-plugin-compat" spec="^1.2.0" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />
    <plugin name="cordova-plugin-file-transfer" spec="^1.6.3" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3" />
    <plugin name="cordova-plugin-googleplus" spec="git+https://github.com/EddyVerbruggen/cordova-plugin-googleplus.git">
        <variable name="REVERSED_CLIENT_ID" value="com.googleusercontent.apps.423761283916-m1nrk78ncokk0olhouvma5akn4rntrue" />
    </plugin>
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.2.1" />
    <plugin name="phonegap-plugin-push" spec="^1.10.6">
        <variable name="SENDER_ID" value="85075801930" />
    </plugin>
    <plugin name="phonegap-plugin-speech-recognition" spec="git+https://github.com/macdonst/SpeechRecognitionPlugin.git">
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="So you can say your offer" />
    </plugin>
    <plugin name="cordova-plugin-file" spec="^4.3.3" />
</widget>
